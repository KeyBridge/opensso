        <parameter name="groupName" value="ff_ds"/>
        <parameter name="ptestName" value="NameIdMngtIDPHttpIDPHttpTest"/>
        <parameter name="tinitor" value="IDP"/>
        <parameter name="tbind" value="HTTP"/>
