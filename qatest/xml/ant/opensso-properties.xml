<project>
    <property environment="env"/>

    <target name="init-common"
        depends="setTimeStamp,setOSVariables">
    </target>

    <target name="setOSVariables"
        depends="setOSConditions,setUnixVariables">
    </target>

    <target name="setUnixVariables" if="isUnix">
        <property name="base.report.dir" value="./${SERVER_DIR}/docs/reports/${EXECUTION_MODE}/${date}"/>
        <property name="built.classes.dir" value="./${SERVER_DIR}/built/classes"/>
        <property name="debug.dir" value="./${SERVER_DIR}/debug"/>
        <property name="testng.classpath" value="./lib/testng-5.1-jdk15.jar"/>
        <property name="servlet.classpath" value="./lib/servlet.jar"/>
        <property name="amclientsdk.classpath" value="./lib/amclientsdk.jar"/>
        <property name="fmclientsdk.classpath" value="./lib/fmclientsdk.jar"/>
        <path id="client.classpath">
            <pathelement location="${amclientsdk.classpath}"/>
            <pathelement location="${fmclientsdk.classpath}"/>
            <pathelement location="${built.classes.dir}"/>
	    <pathelement location="${testng.classpath}"/>
	    <pathelement location="${servlet.classpath}"/>
	    <fileset dir="./lib/htmlunit">
		    <include name="**/*.jar"/>
	    </fileset>
        </path>
        <property name="client.cp" refid="client.classpath"/>
    </target>

    <exec executable="uname" outputproperty="hostname">
        <arg line="-n"/>
    </exec>

    <exec executable="uname" outputproperty="osname">
        <arg line="-s"/>
    </exec>

    <target name="setOSConditions">
        <condition property="isUnix">
            <os family="unix"/>
        </condition>
        <condition property="isWindows">
            <os family="windows" />
        </condition>
        <condition property="isMac">
            <os family="mac" />
        </condition>
    </target>

    <target name="setTimeStamp">
     <tstamp>
         <format property="date" pattern="MM_dd_yyyy" locale="en"/>
      </tstamp>
     <tstamp>
         <format property="current.timestamp" pattern="MM_dd_yyyy_hh_mm_aa"
         locale="en"/>
      </tstamp>
    </target>
</project>
