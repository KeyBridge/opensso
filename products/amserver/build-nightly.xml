<project name="opensso-nightly" default="all">
                
    <description>Open Web Single Sign-On: Nightly Build</description>

    <!-- enforce invocation via top level build only -->
    <fail message="*** nightly build may be built from top level only ***">
        <condition>
            <or>
                <not><isset property="nightly.dir"/></not>
            </or>
        </condition>
    </fail>

    <property name="nightly.dist.dir" location="${built.dir}/nightly/dist"/>

    <tstamp>
        <format property="touch.time" pattern="yyyy-MMMM-d hh:mm"/>
    </tstamp> 

    <target name="all" depends="preparebuild">
        <jar destfile="${nightly.dist.dir}/opensso.jar">
            <manifest>
                <attribute name="Version" value="${version}"/>
                <attribute name="Create-On" value="${touch.time}"/>
            </manifest>
            <fileset dir=".">
                <include name="license.txt" />
            </fileset>
            <zipfileset dir="${built.dir}/classes" prefix="classes" />
            <zipfileset dir="${script.dir}" prefix="script" />
            <zipfileset dir="${res.dir}" prefix="resources" />
            <zipfileset dir="${www.dir}" prefix="www" />
        </jar>
        <checksum file="${nightly.dist.dir}/opensso.jar" 
            algorithm="SHA" fileext=".sha" />

        <jar destfile="${nightly.dist.dir}/opensso-src.jar">
            <manifest>
                <attribute name="Version" value="${version}"/>
                <attribute name="Create-On" value="${touch.time}"/>
            </manifest>
            <fileset dir=".">
                <include name="license.txt" />
            </fileset>
            <zipfileset dir="${built.dir}/classes" prefix="classes" />
            <zipfileset dir="${script.dir}" prefix="script" />
            <zipfileset dir="${res.dir}" prefix="resources" />
            <zipfileset dir="${src.dir}" prefix="source" />
            <zipfileset dir="${www.dir}" prefix="www" />
            <zipfileset dir="${xml.dir}" prefix="xml" />
            <zipfileset dir="${built.docs.dir}" prefix="javadocs" />
        </jar>

        <checksum file="${nightly.dist.dir}/opensso-src.jar" 
            algorithm="SHA" fileext=".sha" />

        <copy todir="${nightly.dist.dir}">
            <fileset dir="${clientsdk.dist.dir}">
                <include name="amclientsdk.jar" />
                <include name="amclientsdk.jar.sha" />
            </fileset>
        </copy>

        <copy todir="${nightly.dist.dir}">
            <fileset dir="${demo.dist.dir}">
                <include name="openssodemo.war" />
                <include name="openssodemo.war.sha" />
            </fileset>
        </copy>

        <copy todir="${nightly.dist.dir}">
            <fileset dir="${war.dist.dir}">
                <include name="opensso.war" />
                <include name="opensso.war.sha" />
            </fileset>
        </copy>
    </target>

    <target name="preparebuild">
        <mkdir dir="${nightly.dist.dir}"/>
    </target>

    <target name="clean">
        <delete dir="${nightly.dist.dir}"/>
    </target>

</project>
