<!DOCTYPE ServicesConfiguration
    PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
    "jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="iPlanetAMPlatformService" version="1.0">
        <Schema
            serviceHierarchy="/DSAMEConfig/iPlanetAMPlatformService"
            i18nFileName="amPlatform"
            revisionNumber="20"
            i18nKey="iplanet-am-platform-service-description"
	    propertiesViewBeanURL="../service/SCPlatform">
	    <Global>
                <AttributeSchema name="serviceObjectClasses"
                    type="list"
                    syntax="string"
		    i18nKey="">
		    <DefaultValues>
                        <Value>iplanet-am-platform-service</Value>
		    </DefaultValues>
		</AttributeSchema>
 		<AttributeSchema name="iplanet-am-platform-site-list"
                    type="list"
                    syntax="string"
                    validator="SiteIDValidator"
                    i18nKey="a100">
 		</AttributeSchema>
	        <AttributeSchema name="iplanet-am-platform-server-list"
                    type="list"
                    syntax="string"
                    validator="ServerIDValidator"
                    i18nKey="a101">
		    <DefaultValues>
                        <Value>SERVER_PROTO://@SERVER_HOST@:@SERVER_PORT@|01</Value>
		    </DefaultValues>
		</AttributeSchema>
	        <AttributeSchema name="iplanet-am-platform-locale"
                    type="single"
                    syntax="string"
                    i18nKey="a102">
		    <DefaultValues>
                        <Value>PLATFORM_LOCALE</Value>
		    </DefaultValues>
		</AttributeSchema>
	        <AttributeSchema name="iplanet-am-platform-cookie-domains"
                    type="list"
                    syntax="string"
                    i18nKey="a103">
		    <DefaultValues>
                        <Value>COOKIE_DOMAIN</Value>
		    </DefaultValues>
		</AttributeSchema>
	        <AttributeSchema name="iplanet-am-platform-login-url"
                    type="single"
                    syntax="url"
                    i18nKey="a104">
		    <DefaultValues>
                        <Value>SERVER_DEPLOY_URI/UI/Login</Value>
		    </DefaultValues>
		</AttributeSchema>
                <AttributeSchema name="iplanet-am-platform-logout-url"
                    type="single"
                    syntax="url"
                    i18nKey="a105">
		    <DefaultValues>
                        <Value>SERVER_DEPLOY_URI/UI/Logout</Value>
		    </DefaultValues>
		</AttributeSchema>
                <AttributeSchema name="iplanet-am-platform-available-locales"
                    type="list"
                    syntax="string"
                    i18nKey="a106">
		    <DefaultValues>
                        AVAILABLE_LOCALES
		    </DefaultValues>
		</AttributeSchema>
                <AttributeSchema name="iplanet-am-platform-client-charsets"
                    type="list"
                    syntax="string"
                    i18nKey="a107">
		</AttributeSchema>
                <AttributeSchema name="ServerIDValidator"
                    type="validator"
                    syntax="string">
                    <DefaultValues>
                        <Value>com.sun.identity.sm.ServerIDValidator</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="SiteIDValidator"
                    type="validator"
                    syntax="string">
                    <DefaultValues>
                        <Value>com.sun.identity.sm.SiteIDValidator</Value>
                    </DefaultValues>
                </AttributeSchema>
	    </Global>
        </Schema>
    </Service>
</ServicesConfiguration>
