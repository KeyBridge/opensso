<iPlanetDataAccessLayer>
    <ServerGroup name="default" minConnPool="1" maxConnPool="10">
        <Server name="Server1" host="@DIR_HOST@" port="@DIR_PORT@" type="SIMPLE" />
        <User name="User1" type="proxy">
            <DirDN>
                cn=puser,ou=DSAME Users,@NORMALIZED_ORGBASE@
            </DirDN>
            <DirPassword>
                @ENCADMINPASSWD@
            </DirPassword>
        </User>
        <User name="User2" type="admin">
            <DirDN>
                cn=dsameuser,ou=DSAME Users,@NORMALIZED_ORGBASE@
            </DirDN>
            <DirPassword>
                @ENCADMINPASSWD@
            </DirPassword>
        </User>
        <BaseDN>
            @ORG_BASE@
        </BaseDN>                
    </ServerGroup>

    <!--
    Datastore for storing configuration and policy data in different Directory.
    For SMS to use this configuration, Access Manager must be installed in
    REALM mode and the property "com.sun.identity.sm.ldap.enableProxy" must be
    set to "false".
    -->
    <ServerGroup name="sms" minConnPool="1" maxConnPool="10">
        <Server name="Server1" host="@CONFIG_SERVER@" port="@CONFIG_PORT@"
             type="SIMPLE" />
             <User name="User2" type="admin">
                <DirDN>@CONFIG_ADMINDN@,@NORMALIZED_ORGBASE@</DirDN>
                <DirPassword>@ENCADMINPASSWD@</DirPassword>
             </User>
             <BaseDN>@NORMALIZED_RS@</BaseDN>
    </ServerGroup>

</iPlanetDataAccessLayer>
