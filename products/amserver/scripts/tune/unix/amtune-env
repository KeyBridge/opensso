#############################################################################
# amtune functions
#############################################################################
#-------------------------------------------------------------------------------
# Function      :   checkArgs
# Parameters    :   Number of arguments, argument1, argument2, and argument3
# Output        :   - None -
# Description   :   Check for required arguments when the script is executed and
#                   display Usage information
#-------------------------------------------------------------------------------
checkArgs() {
    numOfArgs=$1
    argString1=$2
    argString2=$3

    NUM_PARAMS_EXPECTED=$AMTUNE_SCRIPT_ARGS

    case $AMTUNE_SCRIPT_TYPE in
        "ws" )
            WSADMIN_PASSWORD=$argString1
            display_usage_password="<web server admin password>"
            ;;
        "as" )
            ASADMIN_PASSWORD=$argString1
            display_usage_password="<application server admin password>"
            ;;
        "ds" )
            DIRMGR_PASSWORD=$argString1
            display_usage_password="<directory server admin password>"
            ;;
        "am" )
            WSADMIN_PASSWORD=$argString1
            display_usage_password="[optional <web server admin password> if web server running in 64-bit mode]"
            ;;
	"os" )
            display_usage_password=""
	    ;; 
        * )
            DIRMGR_PASSWORD=$argString1
            if [ "$WEB_CONTAINER" = "AS7" ] || [ "$WEB_CONTAINER" = "WS61" ]; then
		NUM_PARAMS_EXPECTED=`expr $NUM_PARAMS_EXPECTED - 1`
                display_usage_password=""
            elif [ "$WEB_CONTAINER" = "AS8" ]; then
                ASADMIN_PASSWORD=$argString2
                display_usage_password="<application server admin password>"
            else
                WSADMIN_PASSWORD=$argString2
                display_usage_password="<web server admin password>"
            fi
            ;;
   esac

   if [ "$argString1" = "?" ] ||
      [ "$argString1" = "help" ] ||
      [ $numOfArgs -lt $NUM_PARAMS_EXPECTED ]; then
       getUsage
       exit $AMTUNE_INVALID_CMDLINE_PARAMETER
   fi
}

#-------------------------------------------------------------------------------
# Function      :   getUsage()
# Parameters    :   <none>
# Output        :   <none>
# Description   :   Display help information of amtune scripts
#-------------------------------------------------------------------------------
getUsage() {

    $ECHO `$gettext "Usage:"`
    $ECHO `$gettext "You can use amtune scripts in two ways:"`
    $ECHO `$gettext "1. Use the wrapper script - amtune"`
    $ECHO `$gettext "2. Use individual scripts  - amtune-<component name>"`
    $ECHO
    $ECHO `$gettext "Mandatory Parameter for this scripts:"`
    $ECHO
    if [ $NUM_PARAMS_EXPECTED -eq 0 ]; then
        if [ "$display_usage_password" = "" ]; then
            $ECHO `$gettext "$RUN_SCRIPT_NAME [No argument required]"`
	else
            $ECHO `$gettext "$RUN_SCRIPT_NAME $display_usage_password"`
 	fi
    elif [ $NUM_PARAMS_EXPECTED -eq 1 ]; then
        $ECHO `$gettext "$RUN_SCRIPT_NAME $display_usage_password"`
    elif [ $NUM_PARAMS_EXPECTED -eq 2 ]; then
        $ECHO `$gettext "$RUN_SCRIPT_NAME <directory server admin password> $display_usage_password"`
    else
        $ECHO `$gettext "ERROR: Invalid number of expected parameter $NUM_PARAMS_EXPECTED"`
    fi
    $ECHO
    $ECHO `$gettext "To display this help menu, enter $RUN_SCRIPT_NAME ? or help"`
    $ECHO
    $ECHO `$gettext "Please make sure to customize amtune-env to suit your deployment."`

}

