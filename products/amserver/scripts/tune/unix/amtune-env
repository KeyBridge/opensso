AMTUNE_LINUX_IPV4_TCP_KEEPALIVE_INTVL=15000
AMTUNE_LINUX_IPV4_TCP_FIN_TIMEOUT=30
AMTUNE_LINUX_STACK_SIZE_LIMITS=256

