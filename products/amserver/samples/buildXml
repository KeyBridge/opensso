<project name="opensso-samples" default="all">
                 
    <description>Open Web Single Sign-On: Samples</description>

    <!-- class path -->
    <path id="class.path">
        <pathelement location="classes"/>
        <pathelement location="war/WEB-INF/classes" />
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
    </path>
 
    <target name="all">
        <echo message=" "/>
        <echo message=" Following targets are available:"/>
        <echo message=" "/>
        <echo message=" war        : builds the client SDK sample WAR"/>
        <echo message=" ssocmdline : runs the Single Sign On commandline sample."/>
        <echo message=" "/>

    </target>

    <target name="war">
        <war destfile="ssosamples.war" webxml="xml/web.xml">
            <zipfileset dir="war" />
        </war>
    </target>

    <target name="ssocmdline">
        <java classname="com.sun.identity.samples.sso.CommandLineSSO">
            <classpath refid="class.path"/>
            <arg value="/" />
        </java>
    </target>
     
    <target name="clean">
        <delete dir="ssosamples.war"/>
    </target>
 
</project>
