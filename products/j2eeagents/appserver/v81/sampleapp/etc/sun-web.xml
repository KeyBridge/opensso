<!DOCTYPE sun-web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Application Server 8.1 Servlet 2.4//EN' 'http://www.sun.com/software/appserver/dtds/sun-web-app_2_4-1.dtd'> 

<sun-web-app>
    <security-role-mapping>
        <role-name>MANAGER_ROLE</role-name>
        <group-name>id=manager,ou=role,dc=opensso,dc=java,dc=net</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>EMPLOYEE_ROLE</role-name>
        <group-name>id=employee,ou=role,dc=opensso,dc=java,dc=net</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>ALL_ROLE</role-name>
        <group-name>everyone</group-name>
    </security-role-mapping>

    <session-config>
        <session-manager/>
    </session-config>

    <jsp-config/>

</sun-web-app>

