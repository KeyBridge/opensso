#ifndef _VERSION_H_
#define _VERSION_H_
#include "internal_macros.h"

BEGIN_PRIVATE_NAMESPACE

class Version {
public:
    static const char* getMajorVersion() {return "MAJOR_VERSION";}
    static const char* getMinorVersion() {return "MINOR_VERSION";}   
    static const char* getPatchVersion() {return "PATCH_VERSION";}
    static const char* getHPVersion() {
        char hpVersion[] = "HP_VERSION";
        if ((hpVersion != NULL) && (strcmp(hpVersion,"") != 0) && (strcmp(hpVersion,"-") != 0)) {
            return "HP_VERSION";
        } else {
            return NULL;
        }
    }
    static const char* getEscalationId() {return "ESCALATION";}
    static const char* getBuildDate() {return "BUILD_DATE";}
    static const char* getBuildMachine() {return "BUILD_MACHINE";}
};

END_PRIVATE_NAMESPACE

#endif
