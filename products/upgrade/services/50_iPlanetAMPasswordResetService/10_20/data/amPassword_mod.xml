<!--
  apply this file by:

  amadmin -u "xxx" -w "yyy" -t amPassword_mod.xml

-->

<Requests>

    <SchemaRequests serviceName="iPlanetAMPasswordResetService"
        SchemaType="Organization">
        <AddAttributeSchema fileName="BASEDIR/upgrade/services/50_iPlanetAMPasswordResetService/10_20/data/amPassword_add.xml" />
    </SchemaRequests>

    <SchemaRequests serviceName="iPlanetAMPasswordResetService"
        SchemaType="Organization">
	<AddDefaultValues>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-bindDN" />
		<Value>&#160;</Value>
	    </AttributeValuePair>
	</AddDefaultValues>

	<AddDefaultValues>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-bindPasswd" />
		<Value>&#160;</Value>
	    </AttributeValuePair>
	</AddDefaultValues>

<!-- Set the validators -->

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-userValidate" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-question" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-bindDN" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-bindPasswd" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-option" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-notification" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-enabled" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-user-personal-question" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

	<SetValidator>
	    <AttributeValuePair>
		<Attribute name="iplanet-am-password-reset-max-num-of-questions" />
		<Value>RequiredValueValidator</Value>
	    </AttributeValuePair>
	</SetValidator>

    </SchemaRequests>

</Requests>
