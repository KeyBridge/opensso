<project name="StandAloneStockClient" default="default" basedir=".">
    <description>Builds, tests, and runs the project stockclient.</description>
    <property file="../glassfish.properties"/>
    <property name="is.java-client.module" value="true"/>

    <target name="default" depends="run"/>

    <target name="build" depends="clean">
        <mkdir dir="build/classes"/>
        <javac srcdir="src"
            destdir="build/classes"
            classpath="xyz.jar"
            debug="on">
            <classpath>
                <pathelement location="${glassfish.home}/lib/appserv-rt.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/j2ee.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/webservices-rt.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/openssoclientsdk.jar"/>
                <pathelement location="${glassfish.home}/domains/domain1/config"/>
                <pathelement path="build/classes"/>
            </classpath>
         </javac>
    </target>

    <target name="run" depends="build">
            <echo>java.home=${java.home}</echo>
        <java classname="com.samples.SecuringWS" fork="true">
            <classpath>
                <pathelement location="${glassfish.home}/lib/appserv-rt.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/j2ee.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/ldapjdk.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/webservices-rt.jar"/>
                <pathelement location="${glassfish.home}/addons/accessmanager/openssoclientsdk.jar"/>
                <pathelement location="${glassfish.home}/domains/domain1/config"/>
                <pathelement path="build/classes"/>
            </classpath>
        </java>
    </target>

    <target name="clean">
        <delete dir="dist"/>
        <delete dir="build"/>
    </target>
</project>

