<project name="srczip" default="all" basedir=".">
    <description>Open SSO openssosrc.zip Creation</description>
    <import file="products.xml" />
    <property name="zip.temp.dir" value="${prd.nightly.dir}/.zip" />

    <target name="all">
        <zip destfile="${prd.nightly.dir}/dist/openssosrc.zip" whenempty="create">
            <zipfileset dir="." excludes="**/built/**,**/extlib/**,**/diffs/**" >
            </zipfileset>
        </zip>

        <checksum file="${prd.nightly.dir}/dist/openssosrc.zip"
            algorithm="SHA" fileext=".sha" />
    </target>

</project>
