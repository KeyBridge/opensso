<!DOCTYPE table SYSTEM "table.dtd" >

<table>
    <actions>
        <cc name="addEntityButton" 
            tagclass="com.sun.web.ui.taglib.html.CCButtonTag" />
        <cc name="deleteEntityButton" 
            tagclass="com.sun.web.ui.taglib.html.CCButtonTag">
            <attribute name="dynamic" value="true" />
            <attribute name="disabled" value="true" />
        </cc>
        <cc name="importEntityButton" 
            tagclass="com.sun.web.ui.taglib.html.CCButtonTag" /> 
        <cc name="actionMenu"
            tagclass="com.sun.web.ui.taglib.html.CCDropDownMenuTag" >
            <attribute name="onChange" value="switchView('actionMenu')" />
            <option label="more.actions.label" value="ignore" />
            <option label="add.sp.label" value="AddSP" />
            <option label="add.idp.label" value="AddIDP" />
            <option label="separator.label" value="ignore" />
            <option label="remove.sp.label" value="RemoveSP" />
            <option label="remove.idp.label" value="RemoveIDP" />
            <option label="separator.label" value="ignore" />
            <option label="export.entity.label" value="ExportEntity" />
        </cc>
    </actions>
    <column name="entityNameColumn" sortname="entityNameValue" rowheader="true">
        <cc name="entityNameHref" 
            tagclass="com.sun.web.ui.taglib.html.CCHrefTag">
            <cc name="entityNameValue" 
                tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag" />                                  
        </cc>
    </column>
    <column name="protocolColumn" sortname="protocolValue" rowheader="true">
        <cc name="protocolValue" 
            tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag" />                                  
    </column>
    <column name="roleColumn" sortname="roleValue" rowheader="true">
        <cc name="roleValue" 
            tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag" />                                  
    </column>
    <column name="locationColumn" sortname="locationValue" rowheader="true">
        <cc name="locationValue" 
            tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag" />                                  
    </column>
</table>


