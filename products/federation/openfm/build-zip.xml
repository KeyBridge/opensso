<project name="openfmzip" default="all" basedir=".">
    <description>Open Federation: fam.zip Creation</description>

    <!-- enforce invocation via top level build only -->
    <fail message="*** zip may be built from top level only ***">
        <condition>
            <not><isset property="openfm.built.dir"/></not>
        </condition>
    </fail>

    <property name="zip.temp.dir" value="${openfm.built.dir}/.zip" />

    <target name="all">
        <delete dir="${zip.temp.dir}" />
        <mkdir dir="${zip.temp.dir}" />

        <copy file="${openfm.dir}/license.txt"
            tofile="${zip.temp.dir}/license.txt" />
        <copy file="${openfm.dir}/docs/README.famzip"
            tofile="${zip.temp.dir}/README" />
            
        <copy file="${openfm.dir}/deployable-war/distauth.list"
            tofile="${zip.temp.dir}/deployable-war/distauth.list" />
        <copy file="${openfm.dir}/deployable-war/famconsole.list"
            tofile="${zip.temp.dir}/deployable-war/famconsole.list" />
        <copy file="${fm.dist.dir}/fam.war"
            tofile="${zip.temp.dir}/deployable-war/fam.war" />
            
        <copy file="${openfm.dir}/docs/README"
            tofile="${zip.temp.dir}/docs/README" />
        <copy file="${openfm.dir}/ldif/README"
            tofile="${zip.temp.dir}/ldif/README" />
        <copy todir="${zip.temp.dir}/ldif">
            <fileset dir="${openfm.dir}/ldif" includes="**/*.ldif"/>
        </copy>            
        <copy todir="${zip.temp.dir}/libraries/jars">
            <fileset file="${fm.dist.dir}/famclient.jar" />
            <fileset dir="${extlib.dir}" includes="jsr173_api.jar" />
        </copy>

        <zip destfile="${fm.dist.dir}/fam.zip" whenempty="create">
            <zipfileset dir="${zip.temp.dir}" filemode="755">
                <include name="setup"/>
            </zipfileset>
            <zipfileset dir="${zip.temp.dir}">
                <exclude name="setup"/>
            </zipfileset>
        </zip>

        <checksum file="${fm.dist.dir}/fam.zip"
            algorithm="SHA" fileext=".sha" />
    </target>

    <target name="clean">
        <delete dir="${tools.temp.dir}" />
    </target>
</project>
