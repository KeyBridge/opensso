<suite name="OpenFed_XACML2" verbose="1" parallel="false">
    <test name="XACML2-0" parallel="false">
        <parameter name="query-filename" value="mock/xacml2/sampleXACMLAuthzDecisionQuery.xml" />
        <groups>
            <run>
                <include name="xacml2" />
            </run>
        </groups>
        <classes>
            <class name="com.sun.identity.xacml2.saml2.XACMLAuthzDecisionQueryTest"/>
        </classes>
    </test>
    <test name="XACML2-1" parallel="false">
        <parameter name="request-filename" value="mock/xacml2/sampleRequest.xml" />
        <groups>
            <run>
                <include name="xacml2" />
            </run>
        </groups>
        <classes>
            <class name="com.sun.identity.xacml2.context.RequestTest"/>
        </classes>
    </test>
    <test name="XACML2-2" parallel="false">
        <groups>
            <run>
                <include name="xacml2" />
            </run>
        </groups>
        <classes>
            <class name="com.sun.identity.xacml2.context.SubjectTest"/>
        </classes>
    </test>
    <test name="XACML2-3" parallel="false">
        <groups>
            <run>
                <include name="xacml2" />
            </run>
        </groups>
        <classes>
            <class name="com.sun.identity.xacml2.context.ResourceTest"/>
        </classes>
    </test>
</suite>
