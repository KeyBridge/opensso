<!DOCTYPE ModuleProperties
PUBLIC "=//iPlanet//Authentication Module Properties XML Interface 1.0 DTD//EN"
"jar://com/sun/identity/authentication/Auth_Module_Properties.dtd">

<ModuleProperties moduleName="Infocard" version="1.0" >    
    
    <Callbacks length="0" order="1" timeout="120"
               header="Click 'Log In' to activate your identity selector"
               template="Infocard.jsp">
    </Callbacks>
    
    <Callbacks length="3" order="2" timeout="120" 
               header="Here you can link your Infocard with&lt;BR&gt;         
                       an existing or a new user account&lt;BR&gt;" >
        <NameCallback isRequired="true">            
            <Prompt> UserID : </Prompt>            
        </NameCallback>
        <PasswordCallback echoPassword="false" isRequired="true" >
            <Prompt> Password : </Prompt>            
        </PasswordCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value> Confirm </Value>
                </OptionValue>
                <OptionValue>
                    <Value> New User </Value>
                </OptionValue>
                <OptionValue>
                    <Value> Cancel </Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>
    
    <Callbacks length="4" order="3" timeout="300" header="Self Registration" template="register.jsp" >
        <NameCallback isRequired="true" attribute="uid" >
            <Prompt> UserID: </Prompt>
        </NameCallback>
        <PasswordCallback echoPassword="false" isRequired="true" attribute="userPassword" >
            <Prompt> Password: </Prompt>
        </PasswordCallback>
        <PasswordCallback echoPassword="false" isRequired="true" >
            <Prompt> Confirm Password: </Prompt>
        </PasswordCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value> Register </Value>
                </OptionValue>
                <OptionValue>
                    <Value> Cancel </Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>
    
    
    <Callbacks length="0" order="4" timeout="120" template="noUserName.jsp" />
    
    <Callbacks length="0" order="5" timeout="120" template="noPassword.jsp" />
    
    <Callbacks length="0" order="6" timeout="120" template="noConfirmation.jsp" />
    
    <Callbacks length="0" order="7" timeout="120" template="invalidPassword.jsp" />
    
    <Callbacks length="0" order="8" timeout="120" template="passwordMismatch.jsp" />
    
    <Callbacks length="0" order="9" timeout="120" template="userExists.jsp" />
    
    <Callbacks length="0" order="10" timeout="120" template="userPasswordSame.jsp" />
    
    <Callbacks length="0" order="11" timeout="120" template="missingReqField.jsp" />
    
    <Callbacks length="0" order="12" timeout="120" template="profileException.jsp" />
    
    <Callbacks length="0" order="13" timeout="120" template="infocardInvalidToken.jsp" />
    
    <Callbacks length="0" order="14" timeout="120" template="infocardInvalidCert.jsp" />
    
    <Callbacks length="0" order="15" timeout="120" template="noConfig.jsp" />
    
</ModuleProperties>